<h1 class="text-center mt-3">Eat-Da-Burger</h1>

<img src="assets/img/burger-img.jpg" alt="burger" class="burger-img img-fluid mx-auto d-block mt-3">

<h2 class="text-center mt-3">Choose a burger and devour it!</h2>

<div class="burger-list-headers mt-3 d-flex justify-content-between">
    <h3>Yum!</h3>
    <h3>Gone!</h3>
</div>

<div class="mt-2 d-flex justify-content-between">
    <ul class="burger-list">
        {{#each burger}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/unless}}
        {{/each}}
    </ul>

    <ul class="burger-list">
        {{#each burger}}
            {{#if devoured}} 
                {{> burgers/burger-block devoured=false}}
            {{/if}}
        {{/each}}
    </ul>
</div>

<form class="create-burger-form col-sm-8 mt-3">
  <div class="form-group text-center">
    <label for="burgersubmit">Add a burger</label>
    <input type="text" name="name" class="form-control" id="addburger">
  </div>
  <button type="submit" class="btn btn-success create-burger text-center">Submit</button>
</form>
